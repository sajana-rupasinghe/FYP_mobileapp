<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Chart_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="400dp"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="28dp"
        app:cardElevation="40dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#7D0552">


              <TextView
                android:id="@+id/k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="monospace"
                android:text="Real Time Monitor"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold" />


              <TextView
                android:id="@+id/a"
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="50dp"
                android:text="Current Action"
                android:textColor="#ffffff"
                android:textSize="20dp" />


             <TextView
                android:id="@+id/tvResult"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/a"
                android:layout_alignRight="@+id/a"
                android:layout_marginTop="50dp"
                android:layout_marginRight="-1dp"
                android:text="Retrive Data"
                android:textColor="#ffffff"
                android:textSize="20dp" />

              <TextView
                android:id="@+id/b"
                android:layout_width="401dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/a"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="30dp"
                android:text="Last Updated"
                android:textColor="#ffffff"

                android:textSize="20dp" />


              <TextView
                android:id="@+id/tvResult1"
                android:layout_width="165dp"
                android:layout_height="60dp"
                android:layout_below="@+id/tvResult"
                android:layout_alignBaseline="@+id/b"
                android:layout_alignRight="@+id/b"
                android:layout_centerInParent="true"
                android:layout_marginTop="31dp"
                android:layout_marginRight="-1dp"
                android:text="Retrive Data"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/tvResult1"
        android:layout_marginLeft="0dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="220dp" />

    <Button
        android:id="@+id/btnBarChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Bar Chart "
        android:layout_below="@+id/imageView"/>


</android.widget.RelativeLayout>